<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@color/fondoI">



    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_item"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintVertical_bias=".4"
        android:layout_gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView_00"
                style="@style/PlayButton2"
                android:text="2"
                android:textSize="33sp"
                />

            <TextView
                android:id="@+id/textView_01"
                style="@style/PlayButton"
                android:text="0"
                android:textSize="33sp"
                />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView_10"
                style="@style/PlayButton4"
                android:text="4"
                android:textSize="33sp"
                />

            <TextView
                android:id="@+id/textView_11"
                style="@style/PlayButton8"
                android:text="8"
                android:textSize="33sp"
                />




        </LinearLayout>




    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todas tus partidas se guardaran en la nube para que puedas reanudarlas"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/btnPerfil"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/common_google_signin_btn_icon_dark"
        android:text="iniciar con google"
        android:layout_gravity="center_horizontal"
        android:background="@color/btnG"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Los datos de la partida no se guardaran"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btnInvitado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugar como invitado"
        android:layout_gravity="center_horizontal"
        android:drawableStart="@drawable/invitacion"
        android:background="@color/inv"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"/>


</LinearLayout>